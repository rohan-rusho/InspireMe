<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:padding="24dp"
    android:background="@drawable/bg_background">

    <!-- App Name -->
    <TextView
        android:id="@+id/appTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="InspireMe"
        android:textSize="32sp"
        android:textStyle="bold"
        android:textColor="#ffffff"
        android:layout_marginBottom="8dp"/>

    <!-- Tagline -->
    <TextView
        android:id="@+id/tagline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Explore, Discover, Learn"
        android:textSize="16sp"
        android:textColor="#ffffff"
        android:layout_marginBottom="32dp"/>

    <!-- Quote Box -->
    <TextView
        android:id="@+id/quoteText"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="@drawable/card_bg"
        android:gravity="center"
        android:padding="24dp"
        android:text="Tap refresh to get inspired"
        android:textSize="26sp"
        android:textStyle="italic"
        android:textColor="#ffffff"/>

    <!-- Refresh Button -->
    <Button
        android:id="@+id/refreshBtn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:layout_marginBottom="12dp"
        android:padding="16dp"
        android:text="âœ¨ Refresh Quote"
        android:textSize="18sp"
        android:textStyle="bold"
        android:textColor="#FFFFFF"
        android:backgroundTint="#3B82F6"
        app:cornerRadius="16dp"/>

    <!-- Copy Button -->
    <Button
        android:id="@+id/copyBtn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp"
        android:layout_marginBottom="12dp"
        android:text="ðŸ“‹ Copy Quote"
        android:textSize="18sp"
        android:textStyle="bold"
        android:textColor="#FFFFFF"
        android:backgroundTint="#F59E0B"
        app:cornerRadius="16dp"/>

    <!-- Share Button -->
    <Button
        android:id="@+id/shareBtn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp"
        android:text="ðŸ“¤ Share Quote"
        android:textSize="18sp"
        android:textStyle="bold"
        android:textColor="#FFFFFF"
        android:backgroundTint="#00A070"
        app:cornerRadius="16dp"/>

</LinearLayout>
